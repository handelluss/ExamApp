<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/main_fragment_style" >

    <TextView
        android:id="@+id/theoryTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Теория"
        android:textColor="@color/white"
        android:textSize="48sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/emphasisDictionaryButton" />

    <Button
        android:id="@+id/emphasisDictionaryButton"
        style="@style/button_style"
        android:layout_width="307dp"
        android:layout_height="173dp"

        android:text="Орфоэпичекий словарик"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/theoryTextview"
        app:layout_constraintBottom_toTopOf="@id/paronymDictionaryButton" />

    <Button
        android:id="@+id/paronymDictionaryButton"
        style="@style/button_style"
        android:layout_width="307dp"
        android:layout_height="174dp"

        android:text="Словарик паронимов"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emphasisDictionaryButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="70dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>