<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/exerciseFragmentButtonOrthography"
        style="@style/exerciseFragmentBigButton"
        android:text="@string/fragmentExerciseButtonOrthography"

        app:layout_constraintBottom_toTopOf="@+id/fragment_exercise_guideline"
        app:layout_constraintEnd_toStartOf="@+id/exerciseFragmentButtonPunctuation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7" />

    <Button
        android:id="@+id/exerciseFragmentButtonPunctuation"
        style="@style/exerciseFragmentBigButton"
        android:text="@string/fragmentExerciseButtonPunctuation"

        app:layout_constraintBottom_toTopOf="@+id/fragment_exercise_guideline"
        app:layout_constraintStart_toEndOf="@+id/exerciseFragmentButtonOrthography"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_exercise_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.50" />

    <Button
        android:id="@+id/exerciseFragmentButtonSmallText"
        style="@style/exerciseFragmentSmallButton"
        android:text="@string/fragmentExerciseButtonSmallText"

        app:layout_constraintBottom_toTopOf="@+id/exerciseFragmentButtonLingNorms"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_exercise_guideline"
        app:layout_constraintVertical_chainStyle="spread" />

    <Button
        android:id="@+id/exerciseFragmentButtonLingNorms"
        style="@style/exerciseFragmentSmallButton"
        android:text="@string/fragmentExerciseButtonLingNorms"

        app:layout_constraintBottom_toTopOf="@+id/exerciseFragmentButtonBigText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exerciseFragmentButtonSmallText" />

    <Button
        android:id="@+id/exerciseFragmentButtonBigText"
        style="@style/exerciseFragmentSmallButton"
        android:text="@string/fragmentExerciseButtonBigText"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exerciseFragmentButtonLingNorms" />
</androidx.constraintlayout.widget.ConstraintLayout>